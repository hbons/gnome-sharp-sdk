{
    "app-id": "org.sparkleshare.Sparkleshare",
    "command": "sparkleshare",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.24",
    "sdk": "org.gnome.Sdk",
    "metadata": "metadata",
    "separate-locales": false,
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--socket=system-bus",
        "--socket=session-bus",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--share=ipc",
        "--device=dri",
        "--share=network",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "mono",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://download.mono-project.com/sources/mono/mono-4.2.2.30.tar.bz2",
                    "sha256": "57858cd033be9915d7abdc5158c1faae8fa05757c3b7117cab3d703aa696c56b"
                }
            ]
        },
        {
            "name": "openssh",
            "config-opts": ["--without-pie"],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://mirror.exonetric.net/pub/OpenBSD/OpenSSH/portable/openssh-7.5p1.tar.gz",
                    "sha256": "9846e3c5fab9f0547400b4d2c017992f914222b3fd1f8eee6c7dc6bc5e59f9f0"
                }
            ]
        },
        {
            "name": "git",
            "config-opts": ["--with-openssl=no"],
            "make-args": ["NO_PERL=1"],
            "make-install-args": ["NO_PERL=1"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.kernel.org/pub/software/scm/git/git-2.14.1.tar.xz",
                    "sha256": "6f724c6d0e9e13114ab35db6f67e1b2c1934b641e89366e6a0e37618231f2cc6"
                },
                {
                    "type": "file",
                    "path": "https://github.com/git-lfs/git-lfs/releases/download/v2.3.0/git-lfs-linux-amd64-2.3.0.tar.gz",
                    "sha256": "5913ed4d023efe30a3f8f536db7cd97c7b76ba68b189baef8428b1d71d82f2f4"
                },
                {
                    "type": "shell",
                    "commands": [
                        "tar -xzf git-lfs-*.tar.gz",
                        "mv git-lfs-*/git-lfs ."
                    ]
                },
                {
                    "type": "patch",
                    "path": "patches/git-lfs.patch"
                }
            ]
        },
        {
            "name": "gtk-sharp3",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mono/gtk-sharp.git",
                    "branch": "master",
                    "commit": "9ef7d3f394b9d485674c59e92db24ac66fd9f16b"
                }
            ]
        },
        {
            "name": "dbus-sharp",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hbons/dbus-sharp",
                    "branch": "master",
                    "commit": "d415624aaa01ec5fbca8f1c65373ba0e21115c69"
                }
            ]
        },
        {
            "name": "dbus-sharp-glib",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hbons/dbus-sharp-glib",
                    "branch": "master",
                    "commit": "23f6dba3764a3bb229a8538e8149a91a6a7fd319"
                }
            ]
        },
        {
            "name": "notify-sharp",
            "config-opts": ["--disable-docs"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hbons/notify-sharp",
                    "branch": "master",
                    "commit": "1f56c37349b7750f3fb4cb6ac88ccbaa62c15d30"
                }
            ] 
        },
        {
            "name": "webkit2-sharp",
            "config-opts": ["--disable-docs"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hbons/webkit2-sharp",
                    "branch": "master",
                    "commit": "a59fd76dd730432c76b12ee6347ea66567107ab9"
                }
            ] 
        },
        {
            "name": "sparkleshare",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hbons/SparkleShare",
                    "branch": "2.0.0",
                    "commit": "5ae6a8252d1d317abc38169e6a168403934b5a98"
                }
            ]
        }
    ]
}

